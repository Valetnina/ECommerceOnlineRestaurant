{% extends "master.html.twig" %}

{% block title %} {{ "Delivery Address"|trans }} {% endblock %}
{% block head %}   
    <!-- Bootstrap Core CSS -->


    <!-- jQuery -->
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCBGdAE-nd01tQ-SGkwgc0bTDnd4jXa-UM"></script>

    <script src="/js/address_script.js"></script>

{% endblock %}


{% block content %}
    <div class="container" id="loginContainer">
        
<div class="row">
    {% if  user or fbUser %}
        <div id="address">
        {{"Delivery Address"|trans}}: <span>{{shippingAddress.address}} </span>
        <span>{{shippingAddress.street}}, </span>
        <span>{{shippingAddress.city}}, </span><span>{{shippingAddress.country}}, </span> <span>{{shippingAddress.postalCode}}, </span><br><br><br>
         <!--<a href='/differentAddress' style="width: 200px; margin:auto; " id="differentAddress">{{"Do you want to make an order do a different address?"|trans}}</a>-->
        <button style="width: 200px; margin:auto; " class="btn btn-lg btn-primary btn-block" id="changeAddressBtn">{{"Do you want to make an order do a different address?"|trans}}</button>

        <button style="width: 200px; margin:auto; " class="btn btn-lg btn-primary btn-block" id="correctAddress">{{"Submit Order"|trans}}</button>

        </div>
            <div id="changeAddressForm">
            {% if fbUser %} 
            <h4>{{"Your facebook account doesn\'t provide your address, or it might be incomplete" |trans}}</h4>
            {% else %}
        <h2 class="form-signin-heading">{{"Provide Delivery Adress"|trans}}</h2>
        <label>{{"Address"|trans}}: </label> <input type="text" name="address" value="{{v.address}}"><br><br>
        <label>{{"Street"|trans}}: </label> <input type="text" name="street" value="{{v.street}}"><br><br>
        <label>{{"City"|trans}}: </label> <input type="text" name="city" value="{{v.city}}"><br><br>
        <label>{{"Country"|trans}}: </label> <input type="text" name="country" value="{{v.country}}"><br><br>
        <label>{{"Postal Code"|trans}}: </label> <input type="text" name="postalCode" value="{{v.postalCode}}"><br><br>
        
        <button class="btn btn-lg btn-primary btn-block" id="submitAddressChange" style="width:300px; margin:auto;">{{"Register address"|trans}}</button>
             </div>
   {% endif %}
                 
                    
{% else %}
    <h1>You are not authorized to see the contents of this page</h1>
{% endif %}

    </div>
    </div>

        {% endblock %}  