{% extends "master.html.twig" %}

{% block title %} {{ "Order Submitted"|trans }} {% endblock %}
{% block content %}

    <div class="container" id="loginContainer">
        <h2>{{"Thank You for your order. The delivery will be made in the shortest time at the following address"|trans}}</h2>
       
        <div>
            <p>{{"Delivery Address"|trans}}: <span>{{shippingAddress.address}} </span>
                <span>{{shippingAddress.street}}, </span>
                <span>{{shippingAddress.city}}, </span><span>{{shippingAddress.country}}, </span> <span>{{shippingAddress.postalCode}} </span></p>
            <p> <span>{{"Contact Person"|trans}}: </span><span>{{shippingAddress.firstName}}, </span><span>{{shippingAddress.lastName}}</span><br>
                <span></span> {{"Contact Phone"|trans}}: <span>{{shippingAddress.phone}}</span></p>
            <br>
            <p>{{"A confirmation email was sent to "|trans}} <span><b>{{shippingAddress.email}}</b></span></p>

        </div>
             <div>
                 <hr>
            <h4>{{"Order Summary"| trans}}</h4>
            <p>Total value before tax: {{ totalBeforeTax }}.</p>
            <p>Taxes (GST/QST/HST) {{ taxes }}. </p>
            <p>{{"Final total to be paid at delivery"|trans}}:
                <b>{{ totalWithShippingAndTaxes }}</b>.</p>
        </div>
        <hr>
                    <a href="/" style="width: 200px; margin:auto; " class="btn btn-lg btn-primary btn-block" id="correctAddress">{{"Continue"|trans}}</a>


    </div>
{% endblock %}  
